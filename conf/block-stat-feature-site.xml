<!--
build-in global indicators : 
    -result     : result for complex indicators
    -menu-seq   : menu's tag sequence in HTML code
    -title-seq  : title's tag sequence in HTML code if any, the title text is similar with <title> tag

build-in simple indicators : 
     build-in simple indicators are each element specified
     -char      : character number
     -own-char  : character number of direct data nodes
     -txt-blk   : non-empty text block number
     -own-txt-blk : non-empty text block number of direct data nodes
     -img       : image number
     -a         : link number
     -child     : direct children number
     -grant-child : grant children number
     -descend   : all descendant number
     -sep       : separator number, separators are defined in configuration
     -sibling   : sibling number
     -dep       : depth in DOM
     -seq       : tag sequence in HTML code
 -->
 <!-- 
    for more information, see block-stat-features-default.xml
 -->
<?xml version="1.0"?>
<block-features>
    <block type="Gallery">
        <rule indicator="title-distance"  range="-20,100"  score="0"  -score="-10" />
        <rule indicator="title-distance"  range="-10,10"   score="2"  -score="0" />
        <rule indicator="-char"           range="0,20"     score="2"  -score="-10" />
        <rule indicator="-char"           range="0,0"      score="2"  -score="0" />
        <rule indicator="-img"            range="1,20"     score="0"  -score="-10" />
        <rule indicator="-img"            range="4,"       score="2"  -score="0" />
        <rule indicator="delta"           range="0,2"      score="2"  -score="0"  _1="-img" _2="-a" />
        <rule indicator="delta"           range=",-4"      score="3" -score="0"  _1="-img" _2="-a" />
    </block>
    <block type="ProductShow">
        <rule indicator="title-distance"  range="0,50"      score="4" -score="-10" />
        <rule indicator="-char"           range="30,"       score="2" -score="0" />
        <rule indicator="-img"            range=",3"        score="2" -score="0" />
        <rule indicator="-txt-blk"        range="10,"       score="2" -score="0" />
        <rule indicator="-sep"            range="3,"        score="4" -score="0" />
    </block>
    <block type="ProductSpec">
        <rule indicator="-sep"            range="3,"      score="3" -score="0" />
        <rule indicator="-sep"            range="4,"      score="4" -score="0" />
        <rule indicator="ave-txt-blk-len" range="4,20"    score="2" -score="0" />
        <rule indicator="-img"            range=",1"      score="0" -score="-10" />
    </block>
    <block type="RelativeProduct">
        <rule indicator="-img"            range="2,"        score="0" -score="-10" />
        <rule indicator="delta"           range="0,"        score="0" -score="-10"  _1="-img" _2="-a" />
        <rule indicator="delta"           range="3,"        score="0" -score="-10"  _1="-img" _2="-txt-blk" />
    </block>
    <block type="ProductDetail">
        <rule indicator="-char"           range="150,"    score="2" -score="0" />
        <rule indicator="-char"           range="300,"    score="2" -score="0" />
        <rule indicator="-img"            range="1,"      score="0" -score="-10" />
        <rule indicator="-img"            range="2,"      score="2" -score="0" />
        <rule indicator="-img"            range="4,"      score="2" -score="0" />
        <rule indicator="delta"           range="4,"      score="4" -score="0"  _1="-a" _2="-img" />
        <rule indicator="delta"           range="8,"      score="4" -score="0"  _1="-a" _2="-img" />
        <rule indicator="delta"           range="2,"      score="0" -score="-10" _1="-a" _2="-img" />
    </block>
    <block type="Comment">
        <rule indicator="-char"           range="200,"    score="2" -score="-10" />
        <rule indicator="-txt-blk"        range="10,"     score="2" -score="0" />
        <rule indicator="-txt-blk"        range="50,"     score="2" -score="0" />
        <rule indicator="ave-txt-blk-len" range=",10"     score="0" -score="-10" />
        <rule indicator="ave-txt-blk-len" range="20,"     score="2" -score="0" />
        <rule indicator="ave-txt-blk-len" range="40,"     score="2" -score="0" />
        <rule indicator="delta"           range="5,"      score="0" -score="-10" _1="-a" _2="-txt-blk" />
    </block>
    <block type="BadBlock">
        <rule indicator="bottom-distance" range="0,300"    score="10" -score="0" />
    </block>
</block-features>
