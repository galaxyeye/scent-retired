<?xml version="1.0"?>
<block-features>
    <!-- 区域类型计算 - 区块html特征 -->
    <!-- DomSegment的root节点和body节点中，标签的id/class属性 -->
    <block type="Gallery">
        <phrase name="gallery" score="8" />
        <phrase name="pic list" score="8" />
        <phrase name="picture list" score="8" />
        <phrase name="image list" score="8" />
    </block>
    <block type="Categories">
        <rule indicator="menu-distance"   range="0,"     score="0"  -score="-100" />
        <rule indicator="title-distance"  range=",0"     score="0"  -score="-100" />
        <rule indicator="-txt-blk"        range="2,30"   score="4"  -score="0" />
        <rule indicator="ave-txt-blk-len" range="2,10"   score="4"  -score="0" />
        <rule indicator="ave-txt-blk-len" range="2,6"    score="4"  -score="0" />
        <rule indicator="-descend"        range="6,50"   score="4"  -score="-100" />
        <rule indicator="-img"            range=",2"     score="0"  -score="-100" />
    </block>
    <block type="ProductSpec">
        <phrase name="attributes list" score="8" />
        <phrase name="attribute list" score="8" />
        <phrase name="product attributes" score="8" />
        <phrase name="pro attributes" score="8" />
        <phrase name="good attributes" score="8" />
        <phrase name="attributes" score="8" />
        <phrase name="specification" score="8" />
        <phrase name="product specification" score="8" />
        <phrase name="product spec" score="8" />
        <phrase name="good specification" score="8" />
        <phrase name="good spec" score="8" />
    </block>
    <block type="ProductDetail">
        <phrase name="product detail" score="8" />
        <phrase name="pro detail" score="8" />
        <phrase name="product content" score="8" />
        <phrase name="pro content" score="8" />
        <phrase name="detail all" score="8" />
        <phrase name="detail content" score="8" />
        <phrase name="description" score="8" />
        <phrase name="introduction" score="8" />
    </block>
    <block type="RelativeProduct">
        <phrase name="relative product" score="8" />
        <phrase name="relative" score="8" />
    </block>
    <block type="Comment">
        <phrase name="comment" score="8" />
        <phrase name="comment list" score="8" />
        <phrase name="comments list" score="8" />
    </block>
    <block type="BadBlock">
        <phrase name="copyright" score="8" />
        <phrase name="authentication" score="8" />        
    </block>
</block-features>
