<?xml version="1.0"?>
<block-features>
    <!-- 区域类型计算 -->
    <!-- DomSegment的body文本中包含的关键词。在计算区域类型匹配度时，各关键词分值会累加 -->
    <block type="CategoryList">
        <phrase name="全部商品分类" score="8" />
    </block>
    <block type="Categories">
        <phrase name="商品的分类" score="8" />
        <phrase name="商品分类" score="8" />
        <phrase name=">" score="8" />
        <!-- it's a timer -->
        <phrase name="天" score="-1" />
        <phrase name="时" score="-1" />
        <phrase name="分" score="-1" />
        <phrase name="秒" score="-1" />
        <phrase name=">>" score="-10" />
        <phrase name="全部商品分类" score="-8" />
    </block>
    <block type="ProductSpec">
        <phrase name="尺寸" score="2.5" />
        <phrase name="重量" score="2.5" />
        <phrase name="型号" score="2.5" />
        <phrase name="颜色" score="2.5" />
        <phrase name="色系" score="2.5" />
        <phrase name="品牌" score="2.5" />
        <phrase name="不支持" score="2.5" />
        <phrase name=">" score="-4" />
    </block>
    <block type="Comment">
        <phrase name="商品评论" score="4" />
        <phrase name="商品评价" score="4" />
        <phrase name="全部评价" score="4" />
        <phrase name="好评"    score="2" />
        <phrase name="心得"    score="2" />
        <phrase name="晒单"    score="2" />
        <phrase name="购买日期" score="2" />
        <phrase name="会员"    score="2" />
    </block>
    <block type="BadBlock">
        <phrase name="购物指南" score="10" />
        <phrase name="特色栏目" score="10" />
        <phrase name="自助服务" score="10" />
        <phrase name="企业采购" score="10" />
        <phrase name="公司简介" score="10" />
        <phrase name="关于我们" score="10" />
        <phrase name="联系我们" score="10" />
        <phrase name="人才招聘" score="10" />
        <phrase name="商家入驻" score="10" />
        <phrase name="友情链接" score="10" />
        <phrase name="备案编号" score="10" />
    </block>
</block-features>
