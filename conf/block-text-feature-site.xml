<?xml version="1.0"?>
<block-features>
    <import file="block-text-feature-areas.xml" />
    <import file="block-text-feature-category-list.xml" />
    <import file="block-text-feature-category-nav.xml" />
    <import file="block-text-feature-product-spec.xml" />
    <import file="block-text-feature-product-comment.xml" />

    <!-- 区域类型计算 -->
    <!-- DomSegment的body文本中包含的关键词。在计算区域类型匹配度时，各关键词分值会累加 -->
    <block label="Gallery" leaf-only="true">
        <phrase name="gallery" score="8" />
        <phrase name="pic list" score="8" />
        <phrase name="picture list" score="8" />
        <phrase name="image list" score="8" />

        <exclude-block label="ProductDetail" />
    </block>
    <block label="ProductDetail" leaf-only="false">
        <phrase name="product detail" score="8" />
        <phrase name="pro detail" score="8" />
        <phrase name="product content" score="8" />
        <phrase name="pro content" score="8" />
        <phrase name="detail all" score="8" />
        <phrase name="detail content" score="8" />
        <phrase name="description" score="8" />
        <phrase name="introduction" score="8" />

        <exclude-block label="Comment" />
    </block>
    <block label="SimilarEntity" leaf-only="true">
        <exclude-block label="Comment" />
    </block>
    <block label="DealHistory" patterns="Table">
        <phrase name="deal record"   score="4" />
        <phrase name="成交时间"        score="2" />
        <phrase name="成交"           score="0.5" />
        <!-- 
        we need patterns like this : 
        <phrase name="data-time"     score="0.5" type="regex" />
         -->
        <exclude-block label="Comment" />
    </block>
    <block label="BadBlock" leaf-only="true">
        <phrase name="copyright" score="8" />
        <phrase name="authentication" score="8" />

        <phrase name="购物指南" score="10" />
        <phrase name="特色栏目" score="10" />
        <phrase name="自助服务" score="10" />
        <phrase name="企业采购" score="10" />
        <phrase name="公司简介" score="10" />
        <phrase name="关于我们" score="10" />
        <phrase name="联系我们" score="10" />
        <phrase name="人才招聘" score="10" />
        <phrase name="商家入驻" score="10" />
        <phrase name="友情链接" score="10" />
        <phrase name="备案编号" score="10" />

        <phrase name="获取验证码" score="10" />
        <phrase name="验证码错误" score="10" />
        <phrase name="请查收短信" score="10" />
        <phrase name="我的手机号" score="10" />
        <phrase name="TA的手机号" score="10" />
        <phrase name="手机号码错误" score="10" />
        <phrase name="继续购物" score="10" />
        <phrase name="去购物车结算" score="10" />
    </block>
</block-features>
